  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "npx husky",
    "migration:generate": "ts-node -r tsconfig-paths/register -r reflect-metadata src/cli/migration-generate.ts",
    "migration:run": "ts-node -r tsconfig-paths/register -r reflect-metadata src/cli/migration-run.ts",
    "migration:revert": "ts-node -r tsconfig-paths/register -r reflect-metadata src/cli/migration-revert.ts",
    "seed:run": "ts-node -r tsconfig-paths/register src/database/seeds/database.seeder.ts"
  },
  "dependencies": {
    "@nestjs/bull": "^11.0.4",
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^11.1.12",
