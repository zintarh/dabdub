    "nest-winston": "^1.10.2",
    "pg": "^8.17.2",
    "puppeteer": "^24.36.0",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.12.0",
    "typeorm": "^0.3.28",
    "uuid": "^13.0.0",
    "viem": "^2.45.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
